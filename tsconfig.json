{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    // "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // "noEmit": false,
    "jsx": "react-jsx",
    //lines added to run a build regrdles of errors:    
    "noEmitOnError": false,
  },
  "include": ["src", ".eslintrc.cjs", "vite.config.ts", "tailwind.config.cjs"],
  //adding start
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ],
  //adding end
  "references": [{ "path": "./tsconfig.node.json" }]
}
